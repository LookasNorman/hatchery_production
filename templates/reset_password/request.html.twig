{% extends 'base.html.twig' %}

{% block body %}
    <style>
        .card {
            max-width: 500px;
            min-width: 380px;
            padding: 6px 6px;
        }
    </style>
    {% for flashError in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    <div class="d-flex justify-content-center card-group">
        <div class="card">
            <h5 class="card-header">
                {% trans %}reset_password.request.title{% endtrans %}
            </h5>
            <div class="card-body">
                {{ form_start(requestForm) }}
                <div class="form-group">
                    <label>{{ form_label(requestForm.email) }}</label>
                    {{ form_widget(requestForm.email) }}
                    <small>{{ form_help(requestForm.email) }}</small>
                    <div class="form-text text-danger">
                        {{ form_errors(requestForm.email) }}
                    </div>
                </div>
                <button class="btn btn-primary">{% trans %}reset_password.request.button.send{% endtrans %}</button>
                {{ form_end(requestForm) }}
            </div>
        </div>
    </div>
{% endblock %}
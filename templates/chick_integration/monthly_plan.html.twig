{% extends 'base.html.twig' %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 600px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <h1>{% trans %}chick_integration.monthly_plan.title{% endtrans %}</h1>
        <h2>{{ integration.name }}</h2>
        <table class="table table-sm table-hover">
            <thead class="table-dark">
            <tr>
                <th>{% trans %}chick_integration.monthly_plan.table.month{% endtrans %}</th>
                <th>{% trans %}chick_integration.monthly_plan.table.chicks{% endtrans %}</th>
            </tr>
            </thead>
            <tbody>
            {% for plan in plans %}
                <tr>
                    <td>{{ plan.month|slice(4, 2) }} / {{ plan.month|slice(0, 4) }}</td>
                    <td class="text-end">{{ plan.chickNumber|number_format(0, ',', ' ') }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">{% trans %}chick_integration.index.table.no_found{% endtrans %}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

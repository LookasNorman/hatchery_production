{% extends 'base.html.twig' %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 1920px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }
        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
        .card {
            max-width: 500px;
            min-width: 380px;
            padding: 6px 6px;
        }
    </style>

    <div class="example-wrapper">
        <h1>{% trans %}chick_integration.edit.title{% endtrans %}</h1>

        <div class="d-flex justify-content-center card-group">
            {% include 'layout/cards/chead.html.twig' %}
            <i class="fa fa-pencil" aria-hidden="true"></i>
            {% trans %}chick_integration.edit.header{% endtrans %}
            {% include 'layout/cards/cbody.html.twig' %}
            {{ include('chick_integration/_form.html.twig', {'button_label': 'chick_integration.edit.button.update'}) }}
            {% include 'layout/cards/cfooter.html.twig' %}
            {{ include('chick_integration/_delete_form.html.twig') }}
            {% include 'layout/cards/cend.html.twig' %}
        </div>
        {{ include('layout/buttons/back.html.twig', { pathLink: path('chick_integration_index'), text: 'chick_integration.new.button.back' }) }}
    </div>
{% endblock %}

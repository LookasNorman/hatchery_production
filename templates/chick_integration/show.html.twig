{% extends 'base.html.twig' %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 1920px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>
    <div class="example-wrapper">
        <h1>{% trans %}chick_integration.show.title{% endtrans %}</h1>
        <div class="d-flex justify-content-center card-group">
            {% include 'layout/cards/chead.html.twig' %}
            {% trans %}chick_integration.show.header{% endtrans %}
            {% include 'layout/cards/cbody.html.twig' %}
            <dl class="row">
                <dd class="col-sm-6">{% trans %}chick_integration.show.name{% endtrans %}:</dd>
                <dt class="col-sm-6 text-end">{{ chick_integration.name }}</dt>
            </dl>
            {% include 'layout/cards/cfooter.html.twig' %}
            {% if is_granted('ROLE_ADMIN') %}
                {{ include('chick_integration/_delete_form.html.twig') }}
            {% endif %}
            {% if is_granted('ROLE_MANAGER') %}
                {{ include('layout/buttons/edit.html.twig',
                    {pathLink: path('chick_integration_edit', {'id': chick_integration.id}), text: 'chick_integration.show.button.edit'}) }}
            {% endif %}
            {{ include('layout/buttons/back.html.twig',
                {pathLink: path('chick_integration_monthly_plan', {'id': chick_integration.id}), text: 'chick_integration.show.button.plan.monthly'}) }}
            {% include 'layout/cards/cend.html.twig' %}
        </div>
        {{ include('layout/buttons/back.html.twig', { pathLink: path('chick_integration_index'), text: 'chick_integration.show.button.back' }) }}
        <div class="accordion" id="accordionIntegration">
            <div class="accordion-item">
                <h2 class="accordion-header" id="headingCustomers">
                    <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseCustomers" aria-expanded="true" aria-controls="collapseCustomers">
                        {% trans %}chick_integration.show.accordion.customers{% endtrans %}
                    </button>
                </h2>
                <div id="collapseCustomers" class="accordion-collapse collapse show" aria-labelledby="headingCustomers" data-bs-parent="#accordionIntegration">
                    <div class="accordion-body">
                        {{ include('customer/list_customers.html.twig') }}
                    </div>
                </div>
            </div>
            <div class="accordion-item">
                <h2 class="accordion-header" id="headingFarms">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseFarms" aria-expanded="false" aria-controls="collapseFarms">
                        {% trans %}chick_integration.show.accordion.farms{% endtrans %}
                    </button>
                </h2>
                <div id="collapseFarms" class="accordion-collapse collapse" aria-labelledby="headingFarms" data-bs-parent="#accordionIntegration">
                    <div class="accordion-body">
                        {{ include('chicks_recipient/list_farm.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

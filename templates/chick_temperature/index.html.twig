{% extends 'base.html.twig' %}

{% block body %}
    <h1>{% trans %}chick_temperature.index.title{% endtrans %}</h1>
    {{ include('layout/buttons/new.html.twig', {pathLink: path('chick_temperature_new'), text: 'chick_temperature.index.button.new' }) }}

    {% include 'layout/tables/thead.html.twig' %}
    <tr>
                <th>{% trans %}chick_temperature.index.table.id{% endtrans %}</th>
                <th>{% trans %}chick_temperature.index.table.input{% endtrans %}</th>
                <th>{% trans %}chick_temperature.index.table.hatcher{% endtrans %}</th>
                <th>{% trans %}chick_temperature.index.table.date{% endtrans %}</th>
                <th>{% trans %}chick_temperature.index.table.temperature{% endtrans %}</th>
                <th>{% trans %}chick_temperature.index.table.actions{% endtrans %}</th>
            </tr>
    {% include 'layout/tables/tbody.html.twig' %}
        {% for chick_temperature in chick_temperatures %}
            <tr>
                <td>{{ chick_temperature.id }}</td>
                <td>{{ chick_temperature.input.name }}</td>
                <td>{{ chick_temperature.hatcher.name }}</td>
                <td>{{ chick_temperature.date ? chick_temperature.date|date('Y-m-d') : '' }}</td>
                <td>{{ chick_temperature.temperature }}</td>
                <td>
                    {{ include('layout/buttons/list_actions.html.twig',
                        {pathLink: path('chick_temperature_show', {'id': chick_temperature.id}), text: 'chick_temperature.index.table.badge.show' }) }}
                    {% if is_granted('ROLE_ADMIN') %}
                        {{ include('layout/buttons/list_actions.html.twig',
                            {pathLink: path('chick_temperature_edit', {'id': chick_temperature.id}), text: 'chick_temperature.index.table.badge.edit' }) }}
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">{% trans %}chick_temperature.index.table.no_found{% endtrans %}</td>
            </tr>
        {% endfor %}
    {% include 'layout/tables/tfooter.html.twig' %}
    {% include 'layout/tables/tend.html.twig' %}

{% endblock %}

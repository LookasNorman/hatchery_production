{% extends 'base.html.twig' %}

{% block body %}
    <div class="text-center m-2">
        <h1>
            {% trans %}chick_temperature.production.hatcher.title{% endtrans %} <span class="text-danger">{{ inputs.name }}</span>
        </h1>
    </div>
    <div class="d-flex justify-content-center flex-wrap">
        {% for hatcher in hatchers %}
            <a class="btn btn-success p-2 m-2 col-sm-3" href="{{ path('chick_temperature_new', {'hatcher': hatcher.id, 'input': inputs.id}) }}">
                <span class="m-4"><i class="fa fa-exchange fa-2x"></i></span>
                <span class="h2">{{ hatcher.name }}</span>
            </a>
        {% endfor %}
    </div>
{% endblock %}

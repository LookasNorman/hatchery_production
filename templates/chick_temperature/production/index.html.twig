{% extends 'base.html.twig' %}

{% block body %}
    <div class="text-center m-2">
        <h1>
            {% trans %}chick_temperature.production.inputs.title{% endtrans %}
        </h1>
    </div>
    <div class="d-flex justify-content-center flex-wrap">
        {% for input in inputs %}
{#            {% set selectionDate = input.inputDate %}#}
            <a class="btn btn-secondary p-2 m-2 col-sm-3" href="{{ path('production_chick_temperature_hatcher', {'input': input.id}) }}">
                <span class="m-4"><i class="fas fa-thermometer fa-2x"></i></span>
                <span class="h1">{{ input.name }} - {{ input.inputDate|date_modify('+21 day')|date('Y-m-d') }}</span>
            </a>
        {% endfor %}
    </div>
{% endblock %}

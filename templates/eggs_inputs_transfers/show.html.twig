{% extends 'base.html.twig' %}

{% block body %}
    <style>
        .card {
            max-width: 500px;
            min-width: 380px;
            padding: 6px 6px;
        }
    </style>
    <h1>{% trans %}eggs_inputs_transfer.show.title{% endtrans %}</h1>
    <div class="d-flex justify-content-center card-group">
        <div class="card">
            <h5 class="card-header">
                {{ eggs_inputs_transfer.eggsInputsDetail.eggInput.name }}:
                {{ eggs_inputs_transfer.transferDate ? eggs_inputs_transfer.transferDate|date('Y-m-d') : '' }}
            </h5>
            <div class="card-body">
                <p class="card-text">
                    {% trans %}eggs_inputs_transfer.show.waste_eggs{% endtrans %}
                    {{ eggs_inputs_transfer.wasteEggs }}
                </p>
            </div>
            <div class="card-footer bg-transparent border-success d-flex">
                {% if is_granted('ROLE_ADMIN') %}
                    {{ include('eggs_inputs_transfers/_delete_form.html.twig') }}
                    <a class="btn btn-warning"
                       href="{{ path('eggs_inputs_transfers_edit', {'id': eggs_inputs_transfer.id}) }}"
                    >
                        {% trans %}eggs_inputs_transfer.show.button.edit{% endtrans %}
                    </a>
                {% endif %}
            </div>
        </div>
    </div>

    <a class="btn btn-primary" href="{{ path('eggs_inputs_transfers_index') }}">
        {% trans %}eggs_inputs_transfer.show.button.back{% endtrans %}
    </a>

{% endblock %}

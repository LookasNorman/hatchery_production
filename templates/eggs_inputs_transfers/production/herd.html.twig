{% extends 'base.html.twig' %}

{% block body %}
    <div class="text-center m-2">
        <h1>
            {% trans %}eggs_inputs_transfer.production.herd.title{% endtrans %} <span class="text-danger">{{ inputs.name }}</span>
            {% trans %}eggs_inputs_transfer.production.herd.farm{% endtrans %} <span class="text-danger">{{ farm.chicksFarm.name }}</span>
        </h1>
    </div>
    <div class="d-flex justify-content-center flex-wrap">
        {% for herd in herds %}
            <a class="btn btn-success p-2 m-2 col-sm-3" href="{{ path('eggs_inputs_transfers_new', {'farm': farm.id, 'herd': herd.id, 'inputs': inputs.id}) }}">
                <span class="m-4"><i class="fa fa-exchange fa-2x"></i></span>
                <span class="h1">{{ herd.name }}</span>
            </a>
        {% endfor %}
    </div>
{% endblock %}

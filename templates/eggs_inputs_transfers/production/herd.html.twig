{% extends 'base.html.twig' %}

{% block body %}
    <div class="text-center m-2">
        <h1>
            {% trans %}eggs_inputs_transfer.production.herd.title{% endtrans %}
        </h1>
    </div>
    <div class="d-flex justify-content-center flex-wrap">
        {% for herd in herds %}
            <a class="btn btn-success p-4 m-2 col-sm-3" href="{{ path('eggs_inputs_transfers_new', {'herd': herd.id, 'inputs': inputs.id}) }}">

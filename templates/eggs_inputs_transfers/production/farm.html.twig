{% extends 'base.html.twig' %}

{% block body %}
    <div class="text-center m-2">
        <h1>
            {% trans %}eggs_inputs_transfer.production.farm.title{% endtrans %} {{ inputs.name }}
        </h1>
    </div>
    <div class="d-flex justify-content-center flex-wrap">
        {% for farm in farms %}
            <a class="btn btn-success p-2 m-2 col-sm-3" href="{{ path('production_transfer_herd', {'farm': farm.id, 'inputs': inputs.id}) }}">
                <span class="m-4"><i class="fa fa-exchange fa-2x"></i></span>
                <span class="h1">{{ farm.chicksFarm.name }}</span>
            </a>
        {% endfor %}
    </div>
{% endblock %}

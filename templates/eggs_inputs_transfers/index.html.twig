{% extends 'base.html.twig' %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 1920px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">

        <h1>
            {% trans %}eggs_inputs_transfer.index.title{% endtrans %}
        </h1>
        {% include 'layout/tables/thead.html.twig' %}
        <tr>
            <th>{% trans %}eggs_inputs_transfer.index.table.id{% endtrans %}</th>
            <th class="text-center">{% trans %}eggs_inputs_transfer.index.table.transfers_egg{% endtrans %}</th>
            <th class="text-center">{% trans %}eggs_inputs_transfer.index.table.transfer_date{% endtrans %}</th>
            <th class="text-center">{% trans %}eggs_inputs_transfer.index.table.herd{% endtrans %}</th>
            <th class="text-center">{% trans %}eggs_inputs_transfer.index.table.farm{% endtrans %}</th>
            <th class="text-center">{% trans %}eggs_inputs_transfer.index.table.input{% endtrans %}</th>
            <th class="text-center">{% trans %}eggs_inputs_transfer.index.table.action{% endtrans %}</th>
        </tr>
        {% include 'layout/tables/tbody.html.twig' %}
        {% for eggs_inputs_transfer in eggs_inputs_transfers %}
            <tr>
                <td>{{ eggs_inputs_transfer.id }}</td>
                <td class="text-center">{{ eggs_inputs_transfer.transfersEgg|number_format(0, ',', ' ') }}</td>
                <td class="text-center">{{ eggs_inputs_transfer.transferDate ? eggs_inputs_transfer.transferDate|date('Y-m-d') : '' }}</td>
                <td class="text-center">{{ eggs_inputs_transfer.herd ? eggs_inputs_transfer.herd.breeder.name : '' }}
                    - {{ eggs_inputs_transfer.herd ? eggs_inputs_transfer.herd.name : '' }}</td>
                <td class="text-center">{{ eggs_inputs_transfer.farm ? eggs_inputs_transfer.farm.chicksFarm.customer.name : '' }}
                    - {{ eggs_inputs_transfer.farm ? eggs_inputs_transfer.farm.chicksFarm.name : '' }}</td>
                <td class="text-center">{{ eggs_inputs_transfer.input ? eggs_inputs_transfer.input.name : '' }}</td>
                <td class="text-center">
                    <span class="btn-group">
                    {{ include('layout/buttons/list_show.html.twig',
                        {pathLink: path('eggs_inputs_transfers_show', {'id': eggs_inputs_transfer.id})}) }}
                        {% if is_granted('ROLE_MANAGER') %}
                            {{ include('layout/buttons/list_edit.html.twig',
                                {pathLink: path('eggs_inputs_transfers_edit', {'id': eggs_inputs_transfer.id})}) }}
                        {% endif %}
                        {% if is_granted('ROLE_ADMIN') %}
                            {{ include('eggs_inputs_transfers/_delete_trash_form.html.twig') }}
                        {% endif %}
                    </span>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">
                    {% trans %}eggs_inputs_transfer.index.table.no_found{% endtrans %}
                </td>
            </tr>
        {% endfor %}
        {% include 'layout/tables/tfooter.html.twig' %}
        {% include 'layout/tables/tend.html.twig' %}
    </div>
{% endblock %}

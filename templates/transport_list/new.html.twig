{% extends 'base.html.twig' %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 1920px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <h1>{% trans %}transport_list.new.title{% endtrans %}</h1>
        <div class="d-flex justify-content-center card-group">
            {% include 'layout/cards/chead.html.twig' %}
            <i class="fa fa-plus"></i>
            {% trans %}transport_list.new.header{% endtrans %}
            {% include 'layout/cards/cbody.html.twig' %}
            {{ include('transport_list/_form.html.twig') }}
            {% include 'layout/cards/cfooter.html.twig' %}
            {% include 'layout/cards/cend.html.twig' %}
        </div>
        {{ include('layout/buttons/back.html.twig', {pathLink: path('transport_list_index'), text: 'transport_list.new.button.back'}) }}
    </div>
{% endblock %}

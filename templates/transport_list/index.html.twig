{% extends 'base.html.twig' %}

{% block title %}TransportList index{% endblock %}

{% block body %}
    <h1>TransportList index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Distance</th>
            <th>DepartureHour</th>
            <th>ArrivalHourToFarm</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for transport_list in transport_lists %}
            <tr>
                <td>{{ transport_list.id }}</td>
                <td>{{ transport_list.distance }}</td>
                <td>{{ transport_list.departureHour ? transport_list.departureHour|date('H:i:s') : '' }}</td>
                <td>{{ transport_list.arrivalHourToFarm ? transport_list.arrivalHourToFarm|date('H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('transport_list_show', {'id': transport_list.id}) }}">show</a>
                    {% if is_granted('ROLE_MANAGER') %}
                        <a href="{{ path('transport_list_edit', {'id': transport_list.id}) }}">edit</a>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% if is_granted('ROLE_MANAGER') %}
        <a href="{{ path('transport_list_new') }}">Create new</a>
    {% endif %}
{% endblock %}

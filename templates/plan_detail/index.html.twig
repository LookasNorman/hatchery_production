{% extends 'base.html.twig' %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 1000px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <h1>{% trans %}plan_detail.index.title{% endtrans %}</h1>
        <table class="table table-sm table-hover fs-6 table-bordered">
            <thead class="table-light text-center">
            <tr>
                <th scope="row" class="col-1">{% trans %}plan_detail.index.table.week{% endtrans %}</th>
                <th scope="row" class="col-4">{% trans %}plan_detail.index.table.eggs{% endtrans %}</th>
                <th scope="row" class="col-3">{% trans %}plan_detail.index.table.chicks{% endtrans %}</th>
                <th scope="row" class="col-4">{% trans %}plan_detail.index.table.stock{% endtrans %}</th>
            </tr>
            </thead>
            <tbody>
            {% for key, plan in plans %}
                <tr>
                    <td>{{ plan.weekYear }}</td>
                    <td>
                        <table class="table-sm">
                            <thead>
                            <tr>
                                <th>{% trans %}plan_detail.index.table.herd.eggs_week{% endtrans %}</th>
                                <th colspan="2">{{ plan.eggsStock.0.eggsStock|number_format(0, ',', ' ') }}</th>
                            </tr>
                            <th/>
                            <tr>
                                <th class="col-8 text-start">{% trans %}plan_detail.index.table.herd.name{% endtrans %}</th>
                                <th class="col text-center">{% trans %}plan_detail.index.table.herd.week{% endtrans %}</th>
                                <th class="col text-end">{% trans %}plan_detail.index.table.herd.eggs{% endtrans %}</th>
                            </tr>
                            </thead>
                        {% for egg in plan.eggs %}
                            <tr>
                                <td class=" text-start">{{ egg.name }}</td>
                                <td>---</td>
                                <td class=" text-end">{{ egg.eggsNumber }}</td>
                            </tr>
                        {% endfor %}
                        </table>
                    </td>
                    <td>
                        <table class="table-sm">
                            <thead>
                            <tr>
                                <th class="col-10 text-start">{% trans %}plan_detail.index.table.farm.name{% endtrans %}</th>
                                <th class="col text-end">{% trans %}plan_detail.index.table.farm.chick{% endtrans %}</th>
                            </tr>
                            </thead>
                            {% if plan.chicks is defined %}
                            {% for chick in plan.chicks %}
                                <tr>
                                    <td class="text-start">{{ chick.chickFarm.name }}</td>
                                    <td class="text-end">{{ chick.chickNumber }}</td>
                                </tr>
                            {% endfor %}
                            {% else %}
                                <tr>
                                    <td></td>
                                    <td></td>
                                </tr>
                                {% endif %}
                        </table>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

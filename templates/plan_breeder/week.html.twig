{% extends 'base.html.twig' %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <h1>
            {% if supplier is defined %}
                {{ supplier.name }}
            {% else %}
                {% trans %}plan_breeder.index.hatching_date{% endtrans %} {{ date|date("Y-m-d") }}
            {% endif %}
            {% if suppliers is defined %}
                <h3>{% trans %}plan_breeder.index.supplier{% endtrans %}
                    <br/>
                    {% for supplierHerd in suppliers %}
                        {{ supplierHerd.name }}:
                        {% for herd in supplierHerd.herds %}
                            <span class="h4"> {{ herd.name }}</span>
                        {% endfor %}
                        <br/>
                    {% endfor %}
                </h3>
            {% endif %}
        </h1>
        <table class="table table-sm">
            <thead>
            <tr>
                <th>{% trans %}plan_breeder.index.week{% endtrans %}</th>
                <th>{% trans %}plan_breeder.index.eggs_number{% endtrans %}</th>
            </tr>
            </thead>
            <tbody>
            {% for plan in plans %}
                <tr>
                    <td>{{ plan.weekYear|slice(4, 2) }} / {{ plan.weekYear|slice(0, 4) }}</td>
                    <td>{{ plan.eggsNumber|number_format(0, ',', ' ' ) }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

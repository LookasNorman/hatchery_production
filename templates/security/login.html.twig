{#                            for="exampleCheck1"#}
{#                    >#}
{#                        Remember me#}
{#                    </label>#}
{#                </div>#}
                <button class="btn btn-lg btn-primary" type="submit">
                    Sign in
                </button>
            </div>
            {% if error %}
                <div class="card-footer text-muted alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
        </div>
    </form>
    </div>
{% endblock %}
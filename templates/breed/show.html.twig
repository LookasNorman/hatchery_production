{% extends 'base.html.twig' %}

{% block body %}
    <style>
        .card {
            max-width: 500px;
            min-width: 380px;
            padding: 6px 6px;
        }
    </style>
    <div class="d-flex justify-content-center card-group">
        <div class="card">
            <h5 class="card-header">
                {% trans %}breed.show.title{% endtrans %}
            </h5>
            <div class="card-body">
                <h5 class="card-title">{{ breed.name }} {{ breed.type }}</h5>
            </div>
            {% if is_granted('ROLE_ADMIN') %}
            <div class="card-footer bg-transparent border-success d-flex">
                {{ include('breed/_delete_form.html.twig') }}
                <a class="btn btn-warning" href="{{ path('breed_edit', {'id': breed.id}) }}">
                    {% trans %}breed.show.button.edit{% endtrans %}
                </a>
            </div>
            {% endif %}
        </div>
    </div>

    <a class="btn btn-primary" href="{{ path('breed_index') }}">
        {% trans %}breed.show.button.back{% endtrans %}
    </a>
{% endblock %}

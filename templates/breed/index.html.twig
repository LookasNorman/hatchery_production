{% extends 'base.html.twig' %}

{% block title %}Breed index{% endblock %}

{% block body %}
    <h1>Breed index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Type</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for breed in breeds %}
            <tr>
                <td>{{ breed.id }}</td>
                <td>{{ breed.name }}</td>
                <td>{{ breed.type }}</td>
                <td>
                    <a href="{{ path('breed_show', {'id': breed.id}) }}">show</a>
                    <a href="{{ path('breed_edit', {'id': breed.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('breed_new') }}">Create new</a>
{% endblock %}

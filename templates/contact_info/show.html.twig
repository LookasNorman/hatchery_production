{% extends 'base.html.twig' %}

{% block title %}ContactInfo{% endblock %}

{% block body %}
    <h1>ContactInfo</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ contact_info.id }}</td>
        </tr>
        <tr>
            <th>Department</th>
            <td>{{ contact_info.department }}</td>
        </tr>
        <tr>
            <th>Person</th>
            <td>{{ contact_info.person }}</td>
        </tr>
        <tr>
            <th>PhoneNumber</th>
            <td>{{ contact_info.phoneNumber }}</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{ contact_info.email }}</td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('contact_info_index') }}">back to list</a>
    {% if is_granted('ROLE_MANAGER') %}
        <a href="{{ path('contact_info_edit', {'id': contact_info.id}) }}">edit</a>
    {% endif %}
    {% if is_granted('ROLE_ADMIN') %}
        {{ include('contact_info/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}

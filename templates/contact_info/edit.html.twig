{% extends 'base.html.twig' %}

{% block body %}
    <style>
        .card {
            max-width: 500px;
            min-width: 380px;
            padding: 6px 6px;
        }

        .example-wrapper {
            margin: 1em auto;
            max-width: 1920px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <h1>{% trans %}contact_info.edit.title{% endtrans %}</h1>
        <div class="d-flex justify-content-center card-group">
            {% include 'layout/cards/chead.html.twig' %}
            <i class="fa fa-pencil"></i>
            {% trans %}contact_info.edit.header{% endtrans %}
            {% include 'layout/cards/cbody.html.twig' %}
            {{ include('contact_info/_form.html.twig', {'button_label': 'contact_info.form.button.update'}) }}
            {% include 'layout/cards/cfooter.html.twig' %}
            {% if is_granted("ROLE_ADMIN") %}
                {{ include('contact_info/_delete_form.html.twig') }}
            {% endif %}
            {% include 'layout/cards/cend.html.twig' %}
        </div>
        {{ include('layout/buttons/back.html.twig', { pathLink: path('contact_info_index'), text: 'contact_info.edit.button.back' }) }}
    </div>
{% endblock %}

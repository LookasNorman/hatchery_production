{% extends 'base.html.twig' %}

{% block body %}
    <style>
        .card {
            max-width: 500px;
            min-width: 380px;
            padding: 6px 6px;
        }
    </style>

    <h1>{% trans %}customer.show.title{% endtrans %}</h1>

    <div class="d-flex justify-content-center card-group">
        {% include 'layout/cards/chead.html.twig' %}
        {% trans %}customer.show.header{% endtrans %}
        {% include 'layout/cards/cbody.html.twig' %}
        <h5 class="card-title">{{ customer.name }}</h5>
        <p class="card-text">
            {% trans %}customer.show.email{% endtrans %}: {{ customer.email }}
        </p>
        <p class="card-text">
            {% trans %}customer.show.phone_number{% endtrans %}: {{ customer.phoneNumber }}
        </p>
        {% include 'layout/cards/cfooter.html.twig' %}
        {% if is_granted('ROLE_ADMIN') %}
            {{ include('customer/_delete_form.html.twig') }}
            {{ include('layout/buttons/edit.html.twig', {pathLink: path('customer_edit', {'id': customer.id}), text: 'customer.show.button.edit'}) }}
        {% endif %}
        {% include 'layout/cards/cend.html.twig' %}
    </div>
    {{ include('layout/buttons/back.html.twig', { pathLink: path('customer_index'), text: 'customer.show.button.back' }) }}
{% endblock %}

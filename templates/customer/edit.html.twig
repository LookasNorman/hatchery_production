{% extends 'base.html.twig' %}

{% block body %}
    <style>
        .card {
            max-width: 500px;
            min-width: 380px;
            padding: 6px 6px;
        }
    </style>
    <h1>{% trans %}customer.edit.title{% endtrans %}</h1>

    <div class="d-flex justify-content-center card-group">
        {% include 'layout/cards/chead.html.twig' %}
        {% trans %}customer.edit.header{% endtrans %}
        {% include 'layout/cards/cbody.html.twig' %}
        {{ include('customer/_form.html.twig', {'button_label': 'customer.edit.button.update'}) }}
        {% include 'layout/cards/cfooter.html.twig' %}
        {{ include('customer/_delete_form.html.twig') }}
        {% include 'layout/cards/cend.html.twig' %}
    </div>
    {{ include('layout/buttons/back.html.twig', { pathLink: path('customer_index'), text: 'customer.edit.button.back' }) }}

{% endblock %}

{% extends 'base.html.twig' %}

{% block body %}
    <style>
        .card {
            max-width: 500px;
            min-width: 380px;
            padding: 6px 6px;
        }
    </style>
    <h1>{% trans %}eggs_inputs_details.new.title{% endtrans %}</h1>
    <div class="d-flex justify-content-center card-group">
        {% include 'layout/cards/chead.html.twig' %}
        {% trans %}eggs_inputs_details.new.header{% endtrans %} {{ inputs.name }} {% trans %}eggs_inputs_details.new.on_date{% endtrans %}
        : {{ inputs.inputDate|date('Y-m-d') }}
        {% include 'layout/cards/cbody.html.twig' %}
        {{ include('eggs_inputs_details/_form.html.twig') }}
        {% include 'layout/cards/cfooter.html.twig' %}
        {% include 'layout/cards/cend.html.twig' %}
    </div>
    <div class="d-grid gap-2 d-md-block">
        {{ include('layout/buttons/back.html.twig',
            {pathLink: path('eggs_inputs_show', {'id': inputs.id}), text: 'eggs_inputs_details.new.button.inputs_details'}) }}
        {{ include('layout/buttons/back.html.twig',
            {pathLink: path('eggs_inputs_details_index'), text: 'eggs_inputs_details.new.button.back'}) }}
    </div>

{% endblock %}

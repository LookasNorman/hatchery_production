{% extends 'base.html.twig' %}

{% block body %}
    <style>
        .card {
            max-width: 500px;
            min-width: 380px;
            padding: 6px 6px;
        }
    </style>
    <h1>{% trans %}eggs_inputs_details.show.title{% endtrans %}</h1>
    <div class="d-flex justify-content-center card-group">
        {% include 'layout/cards/chead.html.twig' %}
                {{ eggs_inputs_detail.eggInput.name }}
                -
                {{ eggs_inputs_detail.eggInput.inputDate ? eggs_inputs_detail.eggInput.inputDate|date('Y-m-d') : '' }}
                -
                {{ eggs_inputs_detail.chickNumber }} {% trans %}eggs_inputs_details.show.chick{% endtrans %}
        {% include 'layout/cards/cbody.html.twig' %}

        {% include 'layout/cards/cfooter.html.twig' %}
                {% if is_granted('ROLE_ADMIN') %}
                    {{ include('eggs_inputs_details/_delete_form.html.twig') }}
                    {{ include('layout/buttons/edit.html.twig',
                        {pathLink: path('eggs_inputs_details_edit', {'id': eggs_inputs_detail.id}), text: 'eggs_inputs_details.show.button.edit'}) }}
                {% endif %}
        {% include 'layout/cards/cend.html.twig' %}
    </div>
    {{ include('layout/buttons/back.html.twig',
        { pathLink: path('eggs_inputs_details_index'), text: 'eggs_inputs_details.show.button.back' }) }}

{% endblock %}

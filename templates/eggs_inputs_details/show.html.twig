{% extends 'base.html.twig' %}

{% block body %}
    <style>
        .card {
            max-width: 500px;
            min-width: 380px;
            padding: 6px 6px;
        }
    </style>
    <h1>{% trans %}eggs_inputs_details.show.title{% endtrans %}</h1>
    <div class="d-flex justify-content-center card-group">
        <div class="card">
            <h5 class="card-header">
                {{ eggs_inputs_detail.eggInput.name }}
                -
                {{ eggs_inputs_detail.eggInput.inputDate ? eggs_inputs_detail.eggInput.inputDate|date('Y-m-d') : '' }}
                -
                {{ eggs_inputs_detail.eggsNumber }} {% trans %}eggs_inputs_details.show.egg{% endtrans %}
            </h5>
            <div class="card-body">
                
            </div>
            <div class="card-footer bg-transparent border-success d-flex">
                {% if is_granted('ROLE_ADMIN') %}
                    {{ include('eggs_inputs_details/_delete_form.html.twig') }}
                    <a class="btn btn-warning" href="{{ path('eggs_inputs_details_edit', {'id': eggs_inputs_detail.id}) }}">
                        {% trans %}eggs_inputs_details.show.button.edit{% endtrans %}
                    </a>
                {% endif %}
            </div>
        </div>
    </div>

    <a class="btn btn-primary" href="{{ path('eggs_inputs_details_index') }}">
        {% trans %}eggs_inputs_details.show.button.back{% endtrans %}
    </a>

{% endblock %}

<form method="post" action="{{ path('setters_delete', {'id': setter.id}) }}"
      onsubmit="return confirm('{% trans %}setters.delete.confirm{% endtrans %}');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ setter.id) }}">
    <button class="btn btn-danger">
        {% trans %}setters.delete.button.delete{% endtrans %}
    </button>
</form>

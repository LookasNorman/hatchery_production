{% extends 'base.html.twig' %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 1920px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <h1>{% trans %}plan.week.title{% endtrans %}</h1>
        <div class="container">
            <div class="row row-cols-4">
                <div class="col">
                    <div class=" border bg-secondary rounded-3 p-2 m-2 w-100">Dzień</div>
                </div>
                <div class="col">
                    <div class=" border bg-success rounded-3 p-2 m-2 w-100">Stan</div>
                </div>
                <div class="col">
                    <div class=" border bg-warning rounded-3 p-2 m-2 w-100">Dostawa</div>
                </div>
                <div class="col">
                    <div class=" border bg-danger rounded-3 p-2 m-2 w-100">Pisklęta</div>
                </div>
            </div>
            {% for plan in plans %}
                <div class="row row-cols-4">
                    <div class="col">
                        <div class=" border border-secondary rounded-3 p-2 m-2 w-100">{{ plan.day|format_date('full') }}</div>
                    </div>
                    <div class="col">
                        <div class=" border border-success rounded-3 p-2 m-2 w-100">
                            <dl class="row">
                                {% for stock in plan.stocks %}
                                    <dd class="col-sm-6">{{ stock.delivery.herd.name }}</dd>
                                    <dt class="col-sm-6 text-end">{{ stock.eggs }}</dt>
                                {% endfor %}
                            </dl>
                        </div>
                    </div>
                    <div class="col">
                        <div class=" border border-warning rounded-3 p-2 m-2 w-100">
                            <dl class="row">
                                {% for delivery in plan.deliveries %}
                                    <dd class="col-sm-6">{{ delivery.name }}</dd>
                                    <dt class="col-sm-6 text-end">{{ delivery.eggsNumber }}</dt>
                                {% endfor %}
                            </dl>
                        </div>
                    </div>
                    <div class="col">
                        <div class=" border border-danger rounded-3 p-2 m-2 w-100">
                            <dl class="row">
                                <dd class="col-sm-6">Ferma</dd>
                                <dt class="col-sm-6">
                                    <dl class="row">
                                        <dd class="col-sm-6 text-end">Piskląt</dd>
                                        <dt class="col-sm-6 text-end">Jaj</dt>
                                    </dl>
                                </dt>
                                {% for chick in plan.chicks %}
                                    <dd class="col-sm-6">
                                        {{ chick.name }}
                                        <p class="form-text">{{ chick.customer }}</p>
                                    </dd>
                                    <dt class="col-sm-6">
                                        <dl class="row">
                                            <dd class="col-sm-6 text-end">{{chick.chickNumber}}</dd>
                                            <dt class="col-sm-6 text-end">Jaj</dt>
                                        </dl>
                                    </dt>
                                {% endfor %}
                            </dl>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}

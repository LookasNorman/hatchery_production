{% extends 'base.html.twig' %}

{% block body %}
    <h1>{% trans %}plans.index.title{% endtrans %}</h1>
    <ul class="nav nav-tabs" id="myTab" role="tablist">
        {% for key, weeksPlans in yearsPlans %}
            <li class="nav-item" role="presentation">
                {% if loop.first %}
                    <button class="nav-link active" id="year-tab_{{ key }}" data-bs-toggle="tab"
                            data-bs-target="#year_{{ key }}"
                            type="button"
                            role="tab" aria-controls="year_{{ key }}" aria-selected="true">{{ key }}
                    </button>
                {% else %}
                    <button class="nav-link" id="year-tab_{{ key }}" data-bs-toggle="tab"
                            data-bs-target="#year_{{ key }}"
                            type="button"
                            role="tab" aria-controls="year_{{ key }}" aria-selected="true">{{ key }}
                    </button>
                {% endif %}
            </li>
        {% endfor %}
    </ul>
    <div class="tab-content" id="myTabContent">
        {% for key, weeksPlans in yearsPlans %}
            {% if loop.first %}
                <div class="tab-pane fade show active" id="year_{{ key }}" role="tabpanel"
                     aria-labelledby="year-tab_{{ key }}">
                    {% include('plans/year.html.twig') %}
                </div>
            {% else %}
                <div class="tab-pane fade show" id="year_{{ key }}" role="tabpanel"
                     aria-labelledby="year-tab_{{ key }}">
                    {% include('plans/year.html.twig') %}
                </div>

            {% endif %}
        {% endfor %}
    </div>

{% endblock %}

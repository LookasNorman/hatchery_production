{% extends 'base.html.twig' %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 1920px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <h1>{% trans %}vaccination.show.title{% endtrans %}</h1>
        <div class="d-flex justify-content-center card-group">
            {% include 'layout/cards/chead.html.twig' %}
            {{ vaccination.farm.name }} {{ vaccination.herd.name }}
            {% include 'layout/cards/cbody.html.twig' %}
            <dl class="row">
                <dt class="col-sm-6">{% trans %}vaccination.show.eggs_number{% endtrans %}:</dt>
                <dd class="col-sm-6">{{ vaccination.eggsNumber|number_format(0, ',', ' ') }}</dd>
            </dl>
            {% include 'layout/cards/cfooter.html.twig' %}
            {% if is_granted('ROLE_ADMIN') %}
                {{ include('vaccination/_delete_form.html.twig') }}
            {% endif %}
            {% if is_granted('ROLE_MANAGER') %}
                {{ include('layout/buttons/edit.html.twig', {pathLink: path('vaccination_edit', {'id': vaccination.id}), text: 'vaccination.show.button.edit'}) }}
            {% endif %}
            {% include 'layout/cards/cend.html.twig' %}
        </div>
        {{ include('layout/buttons/back.html.twig', { pathLink: path('vaccination_index'), text: 'vaccination.show.button.back' }) }}
    </div>
{% endblock %}

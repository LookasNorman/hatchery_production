{% extends 'base.html.twig' %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 1920px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">

        <h1>{% trans %}vaccination.index.title{% endtrans %}</h1>
        {% if is_granted("ROLE_ADMIN") %}
            {{ include('layout/buttons/new.html.twig', {pathLink: path('vaccination_new'), text: 'vaccination.index.button.new' }) }}
        {% endif %}
        <table class="table table-sm table-hover">
            <thead class="table-dark">
            <tr>
                <th>{% trans %}vaccination.index.table.id{% endtrans %}</th>
                <th>{% trans %}vaccination.index.table.farm{% endtrans %}</th>
                <th>{% trans %}vaccination.index.table.herd{% endtrans %}</th>
                <th>{% trans %}vaccination.index.table.eggs_number{% endtrans %}</th>
                <th>{% trans %}vaccination.index.table.actions{% endtrans %}</th>
            </tr>
            </thead>
            <tbody>
            {% for vaccination in vaccinations %}
                <tr>
                    <td>{{ vaccination.id }}</td>
                    <td>{{ vaccination.farm.name }}</td>
                    <td>{{ vaccination.herd.name }}</td>
                    <td>{{ vaccination.eggsNumber }}</td>
                    <td>
                        <span class="btn-group">
                        <a class="btn" href="{{ path('vaccination_show', {'id': vaccination.id}) }}"><i
                                    class="fas fa-search"></i></a>
                        <a class="btn" href="{{ path('vaccination_edit', {'id': vaccination.id}) }}"><i
                                    class="fas fa-pen"></i></a>
                        {{ include('vaccination/_delete_trash_form.html.twig') }}
                        </span>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">{% trans %}vaccination.index.table.no_found{% endtrans %}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    </div>
{% endblock %}

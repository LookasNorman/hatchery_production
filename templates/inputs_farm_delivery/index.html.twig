{% extends 'base.html.twig' %}

{% block body %}
<style>
    .example-wrapper {
        margin: 1em auto;
        max-width: 1920px;
        width: 95%;
        font: 18px/1.5 sans-serif;
    }

    .example-wrapper code {
        background: #F5F5F5;
        padding: 2px 6px;
    }
</style>

<div class="example-wrapper">
    <h1>{% trans %}inputs_farm_delivery.index.title{% endtrans %}</h1>

    {% include 'layout/tables/thead.html.twig' %}
    <tr>
            <th>{% trans %}inputs_farm_delivery.index.table.id{% endtrans %}</th>
            <th>{% trans %}inputs_farm_delivery.index.table.farm{% endtrans %}</th>
            <th>{% trans %}inputs_farm_delivery.index.table.herd{% endtrans %}</th>
            <th>{% trans %}inputs_farm_delivery.index.table.eggs_number{% endtrans %}</th>
            <th>{% trans %}inputs_farm_delivery.index.table.actions{% endtrans %}</th>
        </tr>
    {% include 'layout/tables/tbody.html.twig' %}
        {% for inputs_farm_delivery in inputs_farm_deliveries %}
            <tr>
                <td>{{ inputs_farm_delivery.id }}</td>
                <td>
                    {{ inputs_farm_delivery.inputsFarm.chicksFarm.customer.name }} -
                    {{ inputs_farm_delivery.inputsFarm.chicksFarm.name }}
                </td>
                <td>
                    {{ inputs_farm_delivery.delivery.herd.breeder.name }} -
                    {{ inputs_farm_delivery.delivery.herd.name }}
                </td>
                <td>{{ inputs_farm_delivery.eggsNumber|number_format(0, ',', ' ') }}</td>
                <td>
                    {{ include('layout/buttons/list_show.html.twig',
                        {pathLink: path('inputs_farm_delivery_show', {'id': inputs_farm_delivery.id})}) }}
                    {% if is_granted('ROLE_MANAGER') %}
                        {{ include('layout/buttons/list_edit.html.twig',
                            {pathLink: path('inputs_farm_delivery_edit', {'id': inputs_farm_delivery.id})}) }}
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
    {% include 'layout/tables/tfooter.html.twig' %}
    {% include 'layout/tables/tend.html.twig' %}
</div>
{% endblock %}

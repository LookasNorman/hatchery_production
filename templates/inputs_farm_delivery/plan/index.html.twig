{% extends 'base.html.twig' %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 1920px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <h1>{% trans %}inputs_farm_delivery.plan.index.title{% endtrans %}</h1>

        <div class="d-flex justify-content-center flex-wrap">
            <a class="btn btn-info p-4 m-2 col-sm-3 disabled" href="">
                <i class="fa fa-plus"></i>
            </a>
            {% for input in inputs %}
                <a class="btn btn-info p-4 m-2 col-sm-3" href="{{ path('eggs_inputs_plan_show', {'id': input.id}) }}">
                    {{ input.name }} - {{ input.inputDate|date('Y-m-d') }}
                </a>
            {% endfor %}
        </div>
    </div>
{% endblock %}

{% block herdDeliveries %}
    <table class="table table-sm table-bordered table-hover">
        <thead class="thead-light">
        <tr>
            <th class="text-center align-middle">
                {% trans %}herds.herd_deliveries.table.id{% endtrans %}
            </th>
            <th class="text-center align-middle">
                {% trans %}herds.herd_deliveries.table.delivery_date{% endtrans %}
            </th>
            <th class="text-center align-middle">
                {% trans %}herds.herd_deliveries.table.first_laying_date{% endtrans %}
            </th>
            <th class="text-center align-middle">
                {% trans %}herds.herd_deliveries.table.last_laying_date{% endtrans %}
            </th>
            <th class="text-center align-middle">
                {% trans %}herds.herd_deliveries.table.delivery_eggs_number{% endtrans %}
            </th>
            <th class="text-center align-middle">
                {% trans %}herds.herd_deliveries.table.eggs_warehouse{% endtrans %}
            </th>
            <th class="text-center align-middle">
                {% trans %}herds.herd_deliveries.table.action{% endtrans %}
            </th>
        </tr>
        </thead>
        <tbody>
        {% for delivery in deliveries %}
        <tr>
            <td class="text-center align-middle">
                {{ delivery.id }}
            </td>
            <td class="text-center align-middle">
                {{ delivery.deliveryDate ? delivery.deliveryDate|date('Y-m-d') : '' }}
            </td>
            <td class="text-center align-middle">
                {{ delivery.firstLayingDate ? delivery.firstLayingDate|date('Y-m-d') : '' }}
            </td>
            <td class="text-center align-middle">
                {{ delivery.lastLayingDate ? delivery.lastLayingDate|date('Y-m-d') : '' }}
            </td>
            <td class="text-center align-middle">
                {{ delivery.eggsNumber|number_format(0, ',', ' ') }}
            </td>
            <td class="text-center align-middle">
                {{ delivery.eggsOnWarehouse|number_format(0, ',', ' ') }}
            </td>
            <td>
                <a class="badge badge-info" href="{{ path('eggs_delivery_show', {'id': delivery.id}) }}">
                    {% trans %}herds.herd_deliveries.table.badge.show{% endtrans %}
                </a>
                {% if is_granted('ROLE_ADMIN') %}
                    <a class="badge badge-warning"
                       href="{{ path('eggs_delivery_edit', {'id': delivery.id}) }}">
                        {% trans %}herds.herd_deliveries.table.badge.edit{% endtrans %}
                    </a>
                {% endif %}
            </td>
        </tr>
        {% endfor %}
        </tbody>
    </table>

    <table class="table table-sm table-bordered table-hover">
        <thead class="thead-light">
        <tr>
            <th class="text-center align-middle">
                {% trans %}herds.show_delivery.table.input_name{% endtrans %}
            </th>
            <th class="text-center align-middle">
                {% trans %}herds.show_delivery.table.delivery_id{% endtrans %}
            </th>
            <th class="text-center align-middle">
                {% trans %}herds.show_delivery.table.delivery_date{% endtrans %}
            </th>
            <th class="text-center align-middle">
                {% trans %}herds.show_delivery.table.eggs_number{% endtrans %}
            </th>
            <th class="text-center align-middle">
                {% trans %}herds.show_delivery.table.waste_lighting{% endtrans %}
            </th>
            <th class="text-center align-middle">
                {% trans %}herds.show_delivery.table.waste_transfer{% endtrans %}
            </th>
            <th class="text-center align-middle">
                {% trans %}herds.show_delivery.table.chick_number{% endtrans %}
            </th>
            <th class="text-center align-middle">
                {% trans %}herds.show_delivery.table.cull_chick{% endtrans %}
            </th>
            <th class="text-center align-middle">
                {% trans %}herds.show_delivery.table.unhatched{% endtrans %}
            </th>
        </tr>
        </thead>
        <tbody>
        {% for inputsDetail in inputsDetails %}
            <tr>
                <td class="text-center align-middle">
                    <a href="{{ path('eggs_inputs_show', {'id': inputsDetail.inputId}) }}">
                        {{ inputsDetail.inputName }}
                    </a>
                </td>
                <td class="text-center align-middle">
                    <a href="{{ path('eggs_delivery_show', {'id': inputsDetail.deliveryId}) }}">
                        {{ inputsDetail.deliveryId }}
                    </a>
                </td>
                <td class="text-center align-middle">
                    {{ inputsDetail.deliveryDate ? inputsDetail.deliveryDate|date('Y-m-d') : '' }}
                </td>
                <td class="text-center align-middle">
                    {{ inputsDetail.deliveryEggs|number_format(0, '', ' ') }}
                </td>
                <td class="text-center align-middle">
                    {{ inputsDetail.wasteLighting ? inputsDetail.wasteLighting|number_format(0, '', ' ') : '' }}
                </td>
                <td class="text-center align-middle">
                    {{ inputsDetail.wasteTransfer ? inputsDetail.wasteTransfer|number_format(0, '', ' ') : '' }}
                </td>
                <td class="text-center align-middle">
                    {{ inputsDetail.chickNumber ? inputsDetail.chickNumber|number_format(0, '', ' ') : '' }}
                </td>
                <td class="text-center align-middle">
                    {{ inputsDetail.cullChick ? inputsDetail.cullChick|number_format(0, '', ' ') : '' }}
                </td>
                <td class="text-center align-middle">
                    {{ inputsDetail.unhatched ? inputsDetail.unhatched|number_format(0, '', ' ') : '' }}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
{% block herdDeliveries %}
    <table class="table table-sm table-bordered table-hover">
        <thead class="thead-light">
        <tr>
            <th class="text-center align-middle">
                {% trans %}herds.show_delivery.table.input_name{% endtrans %}
            </th>
            <th class="text-center align-middle">
                {% trans %}herds.show_delivery.table.delivery{% endtrans %}
            </th>
            <th class="text-center align-middle">
                {% trans %}herds.show_delivery.table.waste_lighting{% endtrans %}
            </th>
            <th class="text-center align-middle">
                {% trans %}herds.show_delivery.table.waste_transfer{% endtrans %}
            </th>
            <th class="text-center align-middle">
                {% trans %}herds.show_delivery.table.chick_number{% endtrans %}
            </th>
            <th class="text-center align-middle">
                {% trans %}herds.show_delivery.table.cull_chick{% endtrans %}
            </th>
            <th class="text-center align-middle">
                {% trans %}herds.show_delivery.table.unhatched{% endtrans %}
            </th>
        </tr>
        </thead>
        <tbody>
        {% for inputDetail in inputDetails %}
        <tr>
            <td>
                {{ inputDetail.eggInput.name }}
            </td>
            <td>
                <table class="table table-sm table-bordered table-hover">
                    <thead>
                    <tr>
                        <th class="text-center align-middle">
                            {% trans %}herds.show_delivery.table.id{% endtrans %}
                        </th>
                        <th class="text-center align-middle">
                            {% trans %}herds.show_delivery.table.delivery_date{% endtrans %}
                        </th>
                        <th class="text-center align-middle">
                            {% trans %}herds.show_delivery.table.eggs_number{% endtrans %}
                        </th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for details in inputDetail.eggsInputsDetailsEggsDeliveries %}
                        <tr>
                            <td class="text-center align-middle">
                                {{ details.eggsDeliveries.id }}
                            </td>
                            <td class="text-center align-middle">
                                {{ details.eggsDeliveries.deliveryDate ? details.eggsDeliveries.deliveryDate|date('Y-m-d') : '' }}
                            </td>
                            <td class="text-center align-middle">
                                {{ details.eggsNumber|number_format(0, ',', ' ') }}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </td>
            {% for lighting in inputDetail.eggsInputsLightings %}
                <td class="text-center align-middle">
                    {{ lighting.wasteEggs }}
                </td>
            {% endfor %}
            {% for transfer in inputDetail.eggsInputsTransfers %}
                <td class="text-center align-middle">
                    {{ transfer.wasteEggs }}
                </td>
            {% endfor %}
            {% for selection in inputDetail.eggsSelections %}
                <td class="text-center align-middle">
                    {{ selection.chickNumber }}
                </td>
                <td class="text-center align-middle">
                    {{ selection.cullChicken }}
                </td>
            {% endfor %}
            <td class="text-center align-middle"></td>
            {% endfor %}
            </td>
        </tr>
        </tbody>
    </table>
{% endblock %}
{% extends 'base.html.twig' %}

{% block body %}
    <style>
        .card {
            max-width: 500px;
            min-width: 380px;
            padding: 6px 6px;
        }
    </style>
    <h1>{% trans %}herds.show.title{% endtrans %}</h1>
    <div class="d-flex justify-content-center card-group">
        <div class="card">
            <h5 class="card-header">
                {{ herd.breeder.name }} - {{ herd.name }}
            </h5>
            <div class="card-body">
                <p class="card-text">
                    {% trans %}herds.show.hatching_date{% endtrans %}
                    : {{ herd.hatchingDate ? herd.hatchingDate|date('Y-m-d') : '' }}
                </p>
            </div>
            <div class="card-footer bg-transparent border-success d-flex">
                {% if is_granted('ROLE_ADMIN') %}
                    {{ include('herds/_delete_form.html.twig') }}
                    <a class="btn btn-warning" href="{{ path('herds_edit', {'id': herd.id}) }}">
                        {% trans %}herds.show.button.edit{% endtrans %}
                    </a>
                {% endif %}
                <a class="btn btn-primary" href="{{ path('herds_breeder_index', {'id': herd.breeder.id}) }}">
                    {% trans %}herds.show.button.breeder_herds{% endtrans %}
                </a>
            </div>
        </div>
    </div>

    <a class="btn btn-primary" href="{{ path('herds_index') }}">
        {% trans %}herds.show.button.back{% endtrans %}
    </a>
{% endblock %}

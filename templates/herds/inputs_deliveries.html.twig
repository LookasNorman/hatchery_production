{% block herdDeliveries %}

    {% include 'layout/tables/thead.html.twig' %}
    <tr>
        <th class="text-center align-middle">
            {% trans %}herds.show_delivery.table.input_name{% endtrans %}
        </th>
        <th class="text-center align-middle">
            {% trans %}herds.show_delivery.table.delivery_date{% endtrans %}
        </th>
        <th class="text-end align-middle">
            {% trans %}herds.show_delivery.table.eggs_number{% endtrans %}
        </th>
        <th class="text-center align-middle">
            {% trans %}herds.show_delivery.table.waste_lighting{% endtrans %}
        </th>
        <th class="text-center align-middle">
            {% trans %}herds.show_delivery.table.transfer_eggs{% endtrans %}
        </th>
        <th class="text-center align-middle">
            {% trans %}herds.show_delivery.table.chick_number{% endtrans %}
        </th>
        <th class="text-center align-middle">
            {% trans %}herds.show_delivery.table.cull_chick{% endtrans %}
        </th>
        <th class="text-center align-middle">
            {% trans %}herds.show_delivery.table.unhatched{% endtrans %}
        </th>
    </tr>
    {% include 'layout/tables/tbody.html.twig' %}
    {% for delivery in deliveries %}
        <tr>
            <td class="text-center align-middle">
                {% for inputDelivery in delivery.inputDeliveries %}
                    {{ inputDelivery.input.name }}
                {% endfor %}
            </td>
            <td class="text-center align-middle">
                {{ delivery.deliveryDate ? delivery.deliveryDate|date("Y-m-d") : '' }}
            </td>
            <td class="text-end align-middle">
                {% for inputDelivery in delivery.inputDeliveries %}
                    {{ inputDelivery.eggsNumber|number_format(0, '', ' ') }}<br/>
                {% endfor %}
            </td>
            <td class="text-center align-middle">
            </td>
            <td class="text-center align-middle">
            </td>
            <td class="text-center align-middle">
            </td>
            <td class="text-center align-middle">
            </td>
            <td class="text-center align-middle">
            </td>
        </tr>
    {% endfor %}
    {% include 'layout/tables/tfooter.html.twig' %}
    {% include 'layout/tables/tend.html.twig' %}

{% endblock %}

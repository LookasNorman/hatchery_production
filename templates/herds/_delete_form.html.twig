<form method="post" action="{{ path('herds_delete', {'id': herd.id}) }}"
      onsubmit="return confirm('{% trans %}herds.delete.confirm{% endtrans %}');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ herd.id) }}">
    <button class="btn btn-danger">
        {% trans %}herds.delete.button.delete{% endtrans %}
    </button>
</form>

{% extends 'base.html.twig' %}

{% block body %}
    <div class="text-center m-2">
        <h1>
            {% trans %}eggs_inputs_lighting.production.inputs.title{% endtrans %}
        </h1>
    </div>
    <div class="d-flex justify-content-center flex-wrap">
        {% for input in inputs %}
            <a class="btn btn-warning p-4 m-2 col-sm-3" href="{{ path('production_lighting_herd', {'id': input.id}) }}">
                <i class="far fa-lightbulb fa-2x"></i> {{ input.name }} - {{ input.inputDate|date('Y-m-d') }}
            </a>
        {% endfor %}
    </div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block body %}
    <div class="text-center m-2">
        <h1>
            {% trans %}eggs_inputs_lighting.production.inputs.title{% endtrans %}
        </h1>
    </div>
    <div class="d-flex justify-content-center flex-wrap">
        {% for input in inputs %}
            <a class="btn btn-warning p-2 m-2 col-sm-3" href="{{ path('production_lighting_herd', {'id': input.id}) }}">
                <span class="m-4"><i class="far fa-lightbulb fa-2x"></i></span>
                <span class="h1">{{ input.name }} - {{ input.inputDate|date('Y-m-d') }}</span>
            </a>
        {% endfor %}
    </div>
{% endblock %}

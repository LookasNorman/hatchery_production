{% extends 'base.html.twig' %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 1920px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <h1>{% trans %}plan_delivery_chick.index.title{% endtrans %}</h1>
        <nav aria-label="breadcrumb" class="d-print-none">
            <ol class="breadcrumb">
                {% for year in yearLink %}
                    <li class="breadcrumb-item"><a href="{{ path('plan_year_plan', {'yearN': year}) }}">{{ year }}</a>
                    </li>
                {% endfor %}
            </ol>
        </nav>
        {% if is_granted('ROLE_MANAGER') %}
            {{ include('layout/buttons/new.html.twig',
                { pathLink: path('plan_delivery_chick_new'), text: 'plan_delivery_chick.index.button.new' }) }}
        {% endif %}

        {{ include('plan_delivery_chick/list_plan_chick.html.twig') }}
    </div>
{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 1920px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <h1>{% trans %}plan_delivery_chick.index.title{% endtrans %}</h1>
        <div class="card-group">
            <div class="card m-2 shadow-lg p-1 mb-5 bg-body rounded">
                <div class="card-body">
{#                    <nav aria-label="breadcrumb" class="d-print-none">#}
{#                        <ol class="breadcrumb">#}
{#                            {% for year in yearLink %}#}

{% extends 'base.html.twig' %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 1920px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <h1>{% trans %}plan_delivery_egg.index.title{% endtrans %}</h1>
        {% if is_granted("ROLE_MANAGER") %}
            {{ include('layout/buttons/new.html.twig', {pathLink: path('plan_delivery_egg_new'), text: 'plan_delivery_egg.index.button.new' }) }}
        {% endif %}

        {% include 'layout/tables/thead.html.twig' %}
        <tr>
                <th>{% trans %}plan_delivery_egg.index.table.id{% endtrans %}</th>
                <th>{% trans %}plan_delivery_egg.index.table.herd{% endtrans %}</th>
                <th>{% trans %}plan_delivery_egg.index.table.breeder{% endtrans %}</th>
                <th>{% trans %}plan_delivery_egg.index.table.eggs_number{% endtrans %}</th>
                <th>{% trans %}plan_delivery_egg.index.table.delivery_date{% endtrans %}</th>
                <th>{% trans %}plan_delivery_egg.index.table.actions{% endtrans %}</th>
            </tr>
        {% include 'layout/tables/tbody.html.twig' %}
            {% for plan_delivery_egg in plan_delivery_eggs %}
                <tr>
                    <td>{{ plan_delivery_egg.id }}</td>
                    <td>{{ plan_delivery_egg.herd }}</td>
                    <td>{{ plan_delivery_egg.breeder }}</td>
                    <td>{{ plan_delivery_egg.eggsNumber|number_format(0, ',', ' ') }}</td>
                    <td>{{ plan_delivery_egg.deliveryDate ? plan_delivery_egg.deliveryDate|date('Y-m-d') : '' }}</td>
                    <td>
                        <span class="btn-group">
                            {{ include('layout/buttons/list_show.html.twig',
                                {pathLink: path('plan_delivery_egg_show', {'id': plan_delivery_egg.id})}) }}
                            {% if is_granted('ROLE_MANAGER') %}
                                {{ include('layout/buttons/list_edit.html.twig',
                                    {pathLink: path('plan_delivery_egg_edit', {'id': plan_delivery_egg.id})}) }}
                            {% endif %}
                            {% if is_granted('ROLE_ADMIN') %}
                                {{ include('plan_delivery_egg/_delete_trash_form.html.twig', {'id': plan_delivery_egg.id}) }}
                            {% endif %}
                        </span>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">{% trans %}plan_delivery_egg.index.table.no_found{% endtrans %}</td>
                </tr>
            {% endfor %}
        {% include 'layout/tables/tfooter.html.twig' %}
        {% include 'layout/tables/tend.html.twig' %}
    </div>
{% endblock %}

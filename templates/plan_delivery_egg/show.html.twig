{% extends 'base.html.twig' %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 1920px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <h1>{% trans %}plan_delivery_egg.show.title{% endtrans %}</h1>
        <div class="d-flex justify-content-center card-group">
            {% include 'layout/cards/chead.html.twig' %}
            {{ plan_delivery_egg.herd.breeder.name }} - {{ plan_delivery_egg.herd.name }}
            {% include 'layout/cards/cbody.html.twig' %}
            <dl class="row">
                <dd class="col-sm-5">{% trans %}plan_delivery_egg.show.eggs_number{% endtrans %}</dd>
                <dt class="col-sm-7 text-end">{{ plan_delivery_egg.eggsNumber|number_format(0, ',', ' ') }}</dt>
                <dd class="col-sm-5">{% trans %}plan_delivery_egg.show.delivery_date{% endtrans %}</dd>
                <dt class="col-sm-7 text-end">{{ plan_delivery_egg.deliveryDate ? plan_delivery_egg.deliveryDate|date('Y-m-d') : '' }}</dt>
            </dl>
            {% include 'layout/cards/cfooter.html.twig' %}
            {% if is_granted('ROLE_ADMIN') %}
                {{ include('plan_delivery_egg/_delete_form.html.twig') }}
            {% endif %}
            {% if is_granted('ROLE_MANAGER') %}
                {{ include('layout/buttons/edit.html.twig',
                    {pathLink: path('plan_delivery_egg_edit', {'id': plan_delivery_egg.id}), text: 'plan_delivery_egg.show.button.edit'}) }}
            {% endif %}
            {% include 'layout/cards/cend.html.twig' %}
        </div>
        {{ include('layout/buttons/back.html.twig',
            { pathLink: path('plan_delivery_egg_index'), text: 'plan_delivery_egg.show.button.back' }) }}
    </div>
{% endblock %}

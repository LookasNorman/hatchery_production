{% extends 'base.html.twig' %}

{% block title %}Edit TransportInputsFarm{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 1920px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <h1>{% trans %}transport_inputs_list.edit.title{% endtrans %}</h1>
        <div class="d-flex justify-content-center card-group">
            {% include 'layout/cards/chead.html.twig' %}
            <i class="fa fa-pencil"></i>
            {% trans %}transport_inputs_list.edit.header{% endtrans %}
            {% include 'layout/cards/cbody.html.twig' %}
            <h5>{{ transport_inputs_farm.farm.eggInput.selectionDate|format_date('full') }}</h5>
            <h5>{{ transport_inputs_farm.farm.chicksFarm.customer.name }}</h5>
            <h5>{{ transport_inputs_farm.farm.chicksFarm.name }}</h5>
            {{ include('transport_inputs_farm/_form.html.twig', {'button_label': 'app.button.update'|trans}) }}
            {% include 'layout/cards/cfooter.html.twig' %}
            {% if is_granted("ROLE_ADMIN") %}
                {{ include('transport_inputs_farm/_delete_form.html.twig') }}
                {{ include('layout/buttons/back.html.twig',
                    { pathLink: path('transport_list_show', {'id': transport_inputs_farm.transportList.id}), text: 'app.button.back' }) }}
            {% endif %}
            {% include 'layout/cards/cend.html.twig' %}
        </div>
    </div>
{% endblock %}

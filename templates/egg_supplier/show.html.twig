{% extends 'base.html.twig' %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 1920px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <h1>{% trans %}egg_supplier.show.title{% endtrans %} </h1>
        <div class="d-flex justify-content-center card-group">
            {% include 'layout/cards/chead.html.twig' %}
            <h3>{{ egg_supplier.name }}</h3>
            {% include 'layout/cards/cbody.html.twig' %}
            <dl class="row">
                <dt class="col-sm-6">{% trans %}egg_supplier.show.email{% endtrans %}</dt>
                <dd class="col-sm-6 text-end">{{ egg_supplier.email }}</dd>
                <dt class="col-sm-6">{% trans %}egg_supplier.show.phone_number{% endtrans %}</dt>
                <dd class="col-sm-6 text-end">{{ egg_supplier.phoneNumber }}</dd>
                <hr/>
                <dt class="col-sm-6">{% trans %}egg_supplier.show.city{% endtrans %}</dt>
                <dd class="col-sm-6 text-end">{{ egg_supplier.postCode }} {{ egg_supplier.city }}</dd>
                <dt class="col-sm-6">{% trans %}egg_supplier.show.street{% endtrans %}</dt>
                <dd class="col-sm-6 text-end">{{ egg_supplier.street }} {{ egg_supplier.streetNubmber }}</dd>
            </dl>
            {% include 'layout/cards/cfooter.html.twig' %}
            {% if is_granted('ROLE_ADMIN') %}
                {{ include('egg_supplier/_delete_form.html.twig') }}
            {% endif %}
            {% if is_granted('ROLE_MANAGER') %}
                {{ include('layout/buttons/edit.html.twig', {pathLink: path('egg_supplier_edit', {'id': egg_supplier.id}), text: 'egg_supplier.show.button.edit'}) }}
            {% endif %}
            {% include 'layout/cards/cend.html.twig' %}
            <div class="maps">
                <iframe
                        width="480"
                        height="480"
                        style="border:0"
                        src="https://www.google.com/maps/embed/v1/place?key={{ maps_api }}&q=Poland+{{ egg_supplier.postcode }}+{{ egg_supplier.city }}+{{ egg_supplier.street }}+{{ egg_supplier.streetNubmber }}&maptype=satellite"
                        allowfullscreen>
                </iframe>
            </div>
        </div>
        <div class="btn-group" role="group" aria-label="Basic example">
            {{ include('layout/buttons/back.html.twig', { pathLink: path('egg_supplier_index'), text: 'egg_supplier.show.button.back' }) }}
            {{ include('layout/buttons/back.html.twig', { pathLink: path('plan_breeder', {'id': egg_supplier.id}), text: 'egg_supplier.show.button.plans.day' }) }}
            {{ include('layout/buttons/back.html.twig', { pathLink: path('plan_breeder_week', {'id': egg_supplier.id}), text: 'egg_supplier.show.button.plans.week' }) }}
        </div>
        <h3>{% trans %}egg_supplier.show.herds.list{% endtrans %}</h3>
        {% include 'herds/list.html.twig' with {'herds': egg_supplier.herds, 'breeder': egg_supplier} %}
    </div>
{% endblock %}

{% block body %}
    <style>
        .card {
            max-width: 500px;
            min-width: 400px;
            padding: 6px 6px;
        }
    </style>
    <div class="card ">
        <h4 class="card-header">
            {% trans %}main_page.lighting.title{% endtrans %}
        </h4>
        <div class="card-horizontal">
            <div class="card-body">
                <table class="table table-hover">
                    <thead class="thead-light">
                    <tr>
                        <th scope="col">
                            {% trans %}main_page.lighting.table.inputs_name{% endtrans %}
                        </th>
                        <th scope="col">
                            {% trans %}main_page.lighting.table.date{% endtrans %}
                        </th>
                        <th scope="col">
                            {% trans %}main_page.lighting.table.eggs_number{% endtrans %}
                        </th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for data in lighting %}
                        <tr>
                            <th scope="row">
                                <a href="{{ path('eggs_inputs_show', {'id': data.0.id}) }}">{{ data.0.name }}</a>
                            </th>
                            <td>{{ data.0.inputDate ? data.0.inputDate|date_modify("+12 day")|date('Y-m-d') : '' }}</td>
                            <td>{{ data.eggsNumber }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer">
            <a href="{{ path('no_lighting_index') }}">
                <span class="badge badge-info">
                    {% trans %}main_page.lighting.list{% endtrans %}
                </span>
            </a>
        </div>
    </div>
{% endblock %}
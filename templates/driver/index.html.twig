{% extends 'base.html.twig' %}

{% block body %}
    <h1>{% trans %}driver.index.title{% endtrans %}</h1>

    {% include 'layout/tables/thead.html.twig' %}
    <tr>
        <th>{% trans %}driver.index.table.id{% endtrans %}</th>
        <th>{% trans %}driver.index.table.firstname{% endtrans %}</th>
        <th>{% trans %}driver.index.table.lastname{% endtrans %}</th>
        <th>{% trans %}driver.index.table.phone_number{% endtrans %}</th>
        <th>{% trans %}driver.index.table.actions{% endtrans %}</th>
    </tr>
    {% include 'layout/tables/tbody.html.twig' %}
    {% for driver in drivers %}
        <tr>
            <td>{{ driver.id }}</td>
            <td>{{ driver.firstname }}</td>
            <td>{{ driver.lastname }}</td>
            <td>{{ driver.phoneNumber }}</td>
            <td>
                {{ include('layout/buttons/list_actions.html.twig', {pathLink: path('driver_show', {'id': driver.id}), text: 'driver.index.table.badge.show' }) }}
                {{ include('layout/buttons/list_actions.html.twig', {pathLink: path('driver_edit', {'id': driver.id}), text: 'driver.index.table.badge.edit' }) }}
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="5">{% trans %}driver.index.table.not_found{% endtrans %}</td>
        </tr>
    {% endfor %}
    {% include 'layout/tables/tfooter.html.twig' %}
    {% include 'layout/tables/tend.html.twig' %}

    {{ include('layout/buttons/new.html.twig', {pathLink: path('driver_new'), text: 'driver.index.button.new' }) }}

{% endblock %}

{% extends 'base.html.twig' %}

{% block body %}
    <style>
        .card {
            max-width: 500px;
            min-width: 380px;
            padding: 6px 6px;
        }
    </style>
    <div class="d-flex justify-content-center card-group">
        <div class="card">
            <h5 class="card-header">
                {% trans %}chicks_recipient.show.title{% endtrans %}
            </h5>
            <div class="card-body">
                <h5 class="card-title">{{ chicks_recipient.name }}</h5>
                <p class="card-text">
                    {% trans %}egg_supplier.show.email{% endtrans %}: {{ chicks_recipient.email }}
                </p>
                <p class="card-text">
                    {% trans %}egg_supplier.show.phone_number{% endtrans %}: {{ chicks_recipient.phoneNumber }}
                </p>
            </div>
            {% if is_granted('ROLE_ADMIN') %}
                <div class="card-footer bg-transparent border-success d-flex">
                    {{ include('chicks_recipient/_delete_form.html.twig') }}
                    <a class="btn btn-warning" href="{{ path('chicks_recipient_edit', {'id': chicks_recipient.id}) }}">
                        {% trans %}chicks_recipient.show.button.edit{% endtrans %}
                    </a>
                </div>
            {% endif %}
        </div>
    </div>
    <a class="btn btn-primary" href="{{ path('chicks_recipient_index') }}">
        {% trans %}chicks_recipient.show.button.back{% endtrans %}
    </a>

{% endblock %}

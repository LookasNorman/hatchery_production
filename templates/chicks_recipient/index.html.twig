{% extends 'base.html.twig' %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 1920px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        {% if customer is defined %}
            <h1>{% trans %}chicks_recipient.index.short_title{% endtrans %}: {{ customer.name }}</h1>
        {% else %}
            <h1>
                {% trans %}chicks_recipient.index.title{% endtrans %}
            </h1>
        {% endif %}
        {% if is_granted('ROLE_MANAGER') %}
            {% if customer is defined %}
                {{ include('layout/buttons/new.html.twig', {pathLink: path('chicks_recipient_new', {'id' : customer.id}), text: 'chicks_recipient.index.button.new' }) }}
            {% else %}
                {{ include('layout/buttons/new.html.twig', {pathLink: path('chicks_recipient_new'), text: 'chicks_recipient.index.button.new' }) }}
            {% endif %}
        {% endif %}
        {{ include('chicks_recipient/list_farm.html.twig') }}
    </div>
{% endblock %}

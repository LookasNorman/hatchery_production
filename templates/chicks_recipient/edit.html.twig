{% extends 'base.html.twig' %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 1920px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <div class="d-flex justify-content-center card-group">
            {% include 'layout/cards/chead.html.twig' %}
            {% trans %}chicks_recipient.edit.title{% endtrans %}
            {% include 'layout/cards/cbody.html.twig' %}
            {{ include('chicks_recipient/_form.html.twig', {'button_label': 'chicks_recipient.edit.button.update'}) }}
            {% include 'layout/cards/cfooter.html.twig' %}
            {% if is_granted('ROLE_ADMIN') %}
                {{ include('chicks_recipient/_delete_form.html.twig') }}
            {% endif %}
            {% include 'layout/cards/cend.html.twig' %}
        </div>
        {{ include('layout/buttons/back.html.twig',
            { pathLink: path('chick_recipient_customer_index', {'id': chicks_recipient.customer.id}),
                text: 'chicks_recipient.edit.button.back' }) }}
    </div>
{% endblock %}

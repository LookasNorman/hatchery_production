{% extends 'base.html.twig' %}

{% block body %}
    <style>
        .card {
            max-width: 500px;
            min-width: 380px;
            padding: 6px 6px;
        }
    </style>
    <h1>{% trans %}eggs_inputs.show.title{% endtrans %}</h1>
    {{ include('layout/buttons/back.html.twig', { pathLink: path('eggs_inputs_index'), text: 'eggs_inputs.show.button.back' }) }}

    <div class="d-flex justify-content-center card-group">
        {% include 'layout/cards/chead.html.twig' %}
        {{ eggs_input.name }}
        {% include 'layout/cards/cbody.html.twig' %}
        <p class="card-text">
            {% trans %}eggs_inputs.show.input_date{% endtrans %}
            : {{ eggs_input.inputDate ? eggs_input.inputDate|date('Y-m-d') : '' }}
        </p>
        {% include 'layout/cards/cfooter.html.twig' %}
        <ul>
            {% if is_granted('ROLE_ADMIN') %}
                <li class="d-flex">
                    {{ include('eggs_inputs/_delete_form.html.twig') }}
                    {{ include('layout/buttons/edit.html.twig',
                        {pathLink: path('eggs_inputs_edit', {'id': eggs_input.id}), text: 'eggs_inputs.show.button.edit'}) }}
                    {{ include('layout/buttons/add.html.twig',
                        {pathLink: path('inputs_farm_new', {'id': eggs_input.id}), text: 'eggs_inputs.show.button.add_farm'}) }}
                </li>
                <hr>
                <li class="d-flex">{% trans %}eggs_inputs.show.card.footer.add{% endtrans %}</li>
                <li class="d-flex">
                    {{ include('layout/modals/production_modal.html.twig',
                        { title: 'eggs_inputs.show.button.lighting.new', body: herdsEggs, pathLink: 'eggs_inputs_lighting_new', class: 'btn-warning' }) }}
                    {{ include('layout/modals/production_modal.html.twig',
                        { title: 'eggs_inputs.show.button.lighting.correct',
                            body: herdsEggs, pathLink: 'eggs_inputs_lighting_correct', class: 'btn-warning' }) }}
                    {{ include('eggs_inputs/details/transfer_modal.html.twig',
                        { title: 'eggs_inputs.show.button.transfer', body: herdsEggs, pathLink: 'eggs_inputs_transfers_new', class: 'btn-success' }) }}
                    {{ include('layout/modals/production_modal.html.twig',
                        { title: 'eggs_inputs.show.button.selection', body: herdsEggs, pathLink: 'eggs_selections_new', class: 'btn-danger' }) }}
                </li>
            {% endif %}
        </ul>
        {% include 'layout/cards/cend.html.twig' %}
    </div>
    <hr>
    <h5>Planowane pisklęta</h5>
    {% include 'eggs_inputs/show_customer_delivery.html.twig' %}
    <h5>Nakład</h5>
    {% include 'eggs_inputs/show_supplier_delivery.html.twig' %}

{% endblock %}

{% extends 'base.html.twig' %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 1920px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <h1>{% trans %}user.show.title{% endtrans %}</h1>
        <div class="d-flex justify-content-center card-group">
            {% include 'layout/cards/chead.html.twig' %}
            {{ user.firstname }} {{ user.lastname }}
            {% include 'layout/cards/cbody.html.twig' %}
            <dl class="row">
                <dd class="col-sm-5">{% trans %}user.show.phone_number{% endtrans %}</dd>
                <dt class="col-sm-7">{{ user.phoneNumber }}</dt>
                <dd class="col-sm-5">{% trans %}user.show.email{% endtrans %}</dd>
                <dt class="col-sm-7">{{ user.email }}</dt>
                <dd class="col-sm-5">{% trans %}user.show.roles{% endtrans %}</dd>
                <dt class="col-sm-7">{{ user.roles ? user.roles|json_encode(constant('JSON_PRETTY_PRINT')) : '' }}</dt>
            </dl>
            {% include 'layout/cards/cfooter.html.twig' %}
            {% if is_granted('ROLE_ADMIN') %}
                {{ include('user/_delete_form.html.twig') }}
            {% endif %}
            {% if is_granted('ROLE_MANAGER') %}
                {{ include('layout/buttons/edit.html.twig',
                    {pathLink: path('user_edit', {'id': user.id}), text: 'user.show.button.edit'}) }}
            {% endif %}
            {% include 'layout/cards/cend.html.twig' %}
        </div>
        {{ include('layout/buttons/back.html.twig',
            { pathLink: path('user_index'), text: 'user.show.button.back' }) }}
    </div>

{% endblock %}

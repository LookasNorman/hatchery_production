{% extends 'base.html.twig' %}

{% block body %}
    <div class="text-center m-2">
        <h1>
            {% trans %}eggs_inputs.production.herd.title{% endtrans %}
        </h1>
        <h3>
            {% trans %}eggs_inputs.production.herd.input{% endtrans %}: {{ input.name }} - {{ input.inputDate|date("Y-m-d") }}
        </h3>
        <h3>{% trans %}eggs_inputs.production.herd.breeder{% endtrans %}: {{ breeder.name }}</h3>
    </div>
    <div class="d-flex justify-content-center flex-wrap">
        {% for herd in herds %}
            <a href="{{ path('production_inputs_new', {'herd': herd.id, 'input': input.id}) }}" class="btn btn-info p-2 m-2 col-sm-3">
                <span class="m-4"><i class="fas fa-egg fa-2x"></i></span>
                <span class="h1">{{ herd.name }}</span>
            </a>
        {% endfor %}
    </div>
{% endblock %}

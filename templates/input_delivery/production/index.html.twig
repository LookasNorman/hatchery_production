{% extends 'base.html.twig' %}

{% block body %}
    <div class="text-center m-2">
        <h1>
            {% trans %}eggs_inputs.production.index.title{% endtrans %}
        </h1>
    </div>
    <div class="d-flex justify-content-center flex-wrap">
        {% for input in inputs %}
                <button type="button" class="btn btn-info p-2 m-2 col-sm-3" data-bs-toggle="modal" data-bs-target="#{{ input.name }}Modal">
                    <span class="m-4"><i class="fas fa-egg fa-2x"></i></span>
                    <span class="h1">{{ input.name }} - {{ input.inputDate|date('Y-m-d') }}</span>
                </button>

                <!-- Modal -->
                <div class="modal fade" id="{{ input.name }}Modal" tabindex="-1" aria-labelledby="{{ input.name }}ModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="{{ input.name }}ModalLabel">{{ input.name }} - {{ input.inputDate|date('Y-m-d') }}</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body text-center">
                                <a class="btn btn-info p-2 m-2 col-sm-3" href="{{ path('eggs_inputs_show', {'id': input.id}) }}">
                                    {% trans %}eggs_inputs.production.index.show{% endtrans %}
                                </a>
                                <a class="btn btn-info p-2 m-2 col-sm-3" href="{{ path('production_inputs_breeder', {'id': input.id}) }}">
                                    {% trans %}eggs_inputs.production.index.add{% endtrans %}
                                </a>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                    {% trans %}eggs_inputs.production.index.button.close{% endtrans %}
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
        {% endfor %}
    </div>
{% endblock %}

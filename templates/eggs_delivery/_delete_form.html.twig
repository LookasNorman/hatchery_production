<form method="post" action="{{ path('eggs_delivery_delete', {'id': eggs_delivery.id}) }}"
      onsubmit="return confirm('{% trans %}eggs_delivery.delete.confirm{% endtrans %}');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ eggs_delivery.id) }}">
    <button class="btn btn-danger">
        {% trans %}eggs_delivery.delete.button.delete{% endtrans %}
    </button>
</form>

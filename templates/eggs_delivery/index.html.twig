{% extends 'base.html.twig' %}

{% block body %}
    <h1>
        {% trans %}eggs_delivery.index.title{% endtrans %}
    </h1>
    {% if is_granted('ROLE_PRODUCTION') %}
        {{ include('layout/buttons/new.html.twig', {pathLink: path('eggs_delivery_new'), text: 'eggs_delivery.index.button.new' }) }}
    {% endif %}
    <h3>{% trans %}eggs_delivery.index.eggs_stock{% endtrans %}: {{ eggs_in_warehouse|number_format(0, ',', ' ') }}</h3>
    {% include 'layout/tables/thead.html.twig' %}
    <tr>
        <th class="d-print-none">{% trans %}eggs_delivery.index.table.id{% endtrans %}</th>
        <th class="text-center">{% trans %}eggs_delivery.index.table.breeder{% endtrans %}</th>
        <th class="text-center">{% trans %}eggs_delivery.index.table.herds{% endtrans %}</th>
        <th class="text-center">{% trans %}eggs_delivery.index.table.delivery_date{% endtrans %}</th>
        <th class="text-end">{% trans %}eggs_delivery.index.table.eggs_number{% endtrans %}</th>
        <th class="text-end">{% trans %}eggs_delivery.index.table.eggs_warehouse{% endtrans %}</th>
        <th class="text-center">{% trans %}eggs_delivery.index.table.first_laying_date{% endtrans %}</th>
        <th class="text-center">{% trans %}eggs_delivery.index.table.last_laying_date{% endtrans %}</th>
        <th class="text-center d-print-none">{% trans %}eggs_delivery.index.table.actions{% endtrans %}</th>
    </tr>
    {% include 'layout/tables/tbody.html.twig' %}
    {% for eggs_delivery in eggs_deliveries %}
        <tr>
            <td class="d-print-none">
                {% if eggs_delivery.delivery.partIndex %}
                    {{ eggs_delivery.delivery.partIndex }}
                {% else %}
                    {% if is_granted('ROLE_MANAGER') %}
                        {{ include('layout/buttons/list_actions.html.twig',
                            {pathLink: path('eggs_delivery_add', {'id': eggs_delivery.delivery.id}), text: 'eggs_delivery.index.table.badge.add_part_index' }) }}
                    {% else %}
                        ------
                    {% endif %}
                {% endif %}
            </td>
            <td class="text-center">{{ eggs_delivery.delivery.herd.breeder.name }}</td>
            <td class="text-center">{{ eggs_delivery.delivery.herd.name }}</td>
            <td class="text-center">{{ eggs_delivery.delivery.deliveryDate ? eggs_delivery.delivery.deliveryDate|date('Y-m-d') : '' }}</td>
            <td class="text-end">{{ eggs_delivery.delivery.eggsNumber|number_format(0, ',', ' ') }}</td>
            <td class="text-end">{{ eggs_delivery.eggs|number_format(0, ',', ' ') }}
                {% if is_granted('ROLE_ADMIN') %}
                    / {{ eggs_delivery.delivery.eggsOnWarehouse|number_format(0, ',', ' ') }}
                {% endif %}
            </td>
            <td class="text-center">{{ eggs_delivery.delivery.firstLayingDate ? eggs_delivery.delivery.firstLayingDate|date('Y-m-d') : '' }}</td>
            <td class="text-center">{{ eggs_delivery.delivery.lastLayingDate ? eggs_delivery.delivery.lastLayingDate|date('Y-m-d') : '' }}</td>
            <td class="text-center d-print-none">
                <span class="btn-group">
                    {{ include('layout/buttons/list_show.html.twig',
                        {pathLink: path('eggs_delivery_show', {'id': eggs_delivery.delivery.id})}) }}
                    {% if is_granted('ROLE_PRODUCTION') %}
                        {{ include('layout/buttons/list_edit.html.twig',
                            {pathLink: path('eggs_delivery_edit', {'id': eggs_delivery.delivery.id})}) }}
                    {% endif %}
                    {% if is_granted('ROLE_ADMIN') %}
                        {{ include('eggs_delivery/_delete_trash_form.html.twig', {'id': eggs_delivery.delivery.id}) }}
                    {% endif %}
                    </span>
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="8">{% trans %}eggs_delivery.index.table.no_found{% endtrans %}</td>
        </tr>
    {% endfor %}
    {% include 'layout/tables/tfooter.html.twig' %}
    {% include 'layout/tables/tend.html.twig' %}

{% endblock %}

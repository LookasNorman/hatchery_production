{% extends 'base.html.twig' %}

{% block body %}
    <div class="text-center m-2">
        <h1>
            {% trans %}eggs_delivery.production.herd.title{% endtrans %}
        </h1>
    </div>
    <div class="d-flex justify-content-center flex-wrap">
        {% for herd in herds %}
            <a class="btn btn-primary p-2 m-2 col-sm-3" href="{{ path('production_delivery_new', {'id': herd.id}) }}">
                <span class="m-4"><i class="fas fa-truck fa-2x m-2"></i> <i class="fas fa-egg fa-2x"></i></span>
                <span class="h1">{{ herd.name }}</span>
            </a>
        {% endfor %}
    </div>
{% endblock %}

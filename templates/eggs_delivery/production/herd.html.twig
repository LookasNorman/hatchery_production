{% extends 'base.html.twig' %}

{% block body %}
    <div class="text-center m-2">
        <h1>
            {% trans %}eggs_delivery.production.herd.title{% endtrans %}
        </h1>
    </div>
    <div class="d-flex justify-content-center flex-wrap">
        {% for herd in herds %}
            <a class="btn btn-primary p-4 m-2 col-sm-3" href="{{ path('production_delivery_new', {'id': herd.id}) }}">
                {{ herd.name }}
            </a>
        {% endfor %}
    </div>
{% endblock %}

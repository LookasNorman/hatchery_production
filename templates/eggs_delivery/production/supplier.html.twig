{% extends 'base.html.twig' %}

{% block body %}
    <div class="text-center m-2">
        <h1>
            {% trans %}eggs_delivery.production.breed.title{% endtrans %}
        </h1>
    </div>
    <div class="d-flex justify-content-center flex-wrap">
        {% for supplier in suppliers %}
            <a class="btn btn-primary p-4 m-2 col-sm-3" href="{{ path('production_delivery_herd', {'id': supplier.id}) }}">
                <i class="fas fa-truck"></i> <i class="fas fa-egg"></i> {{ supplier.name }}
            </a>
        {% endfor %}
    </div>
{% endblock %}
